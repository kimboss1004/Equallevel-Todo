<%= form_tag users_path, method: :post, class: "register" do |f| %>
    <h4 class="text-center">Register</h3><br>
    <div class="form-group">
        <%= label_tag :email, nil,  for: "exampleInputEmail1" %>
        <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter email", id: "exampleInputEmail1" %>
    </div>
    <div class="form-group">
        <%= label_tag :login, nil,  for: "loginInput" %>
        <%= text_field_tag :login, nil, class: "form-control", placeholder: "Enter login username", id: "loginInput" %>
    </div>
    <div class="form-group">
        <%= label_tag :firstname, nil,  for: "firstnameInput" %>
        <%= text_field_tag :firstname, nil, class: "form-control", placeholder: "Enter first name", id: "firstnameInput" %>
    </div>
    <div class="form-group">
        <%= label_tag :lastname, nil,  for: "lastnameInput" %>
        <%= text_field_tag :lastname, nil, class: "form-control", placeholder: "Enter last name", id: "lastnameInput" %>
    </div>
    <div class="form-group">
        <%= label_tag :password, nil, for: "exampleInputPassword1" %>
        <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password", id: "exampleInputPassword1" %>
    </div>

    <%= submit_tag "Register", class: "btn btn-primary" %>

<% end %>